@model Biblioteca_Crud.Models.Producto

@{
    ViewData["Title"] = "Editar";
}

<a class="btn btn-danger" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Regresar a la lista</a>

<div class="container d-flex flex-column min-vh-100">
    <div class="row justify-content-center flex-grow-1">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="mb-0">Editar Producto</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" autocomplete="off" required="" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" class="form-control" autocomplete="off" required="" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cantidad" class="form-label"></label>
                            <input asp-for="Cantidad" class="form-control" autocomplete="off" required="" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center">
            &copy; 2024 Biblioteca_Crud
        </div>
    </footer>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
